{
  "$schema": "https://vega.github.io/schema/vega-lite/v4.json",

  "title": {
    "text": "Formula 1 Driver Points",
    "subtitle":"Top 10 Drivers, 2021 Season, Cumulative Points. Scroll and drag to navigate, Click legend items to focus",
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "anchor": "start",
    "color": "black"
  },

  "description": "Coronavirus cases",
  "data": {
    "url": "https://raw.githubusercontent.com/tahaadamaly/tahaadamaly.github.io/main/data/f1_2021_top_driver_points.csv",
    "format": {"type": "csv"}
  },
  "height": 300,
  "width": "container",
  "config": {"background": "#FfFfFf"},
  "mark": {"type": "area", "point": false, "size": 50},
  "selection": {
    "Driver": {"type": "multi", "fields": ["driver"], "bind": "legend"},
    "paintbrush": {"type": "multi", "on": "mouseover", "nearest": true},
    "grid": {"type": "interval", "bind": "scales"}
  },
  
  "encoding": {
    "x": {
      "field": "race",
      "type": "quantitative",
      "title": null,
      "axis": {"grid": false},
      "scale": {"domain": [1, 21]}
    },
    "y": {
      "field": "points",
      "type": "quantitative",
      "title": null,
      "axis": {"grid": false},
    "scale": {"domain": [0, 400]}
    },
    "color": {
      "field": "driver",
      "type": "nominal",
      "scale": {"scheme": "inferno"},
      "title": null,
      "legend": {"orient": "bottom", "columns":5, "fillColor": "#FfFfFf"}
    },
    "opacity": {"condition": {"selection": "Driver", "value": 1}, "value": 0.05},
    "tooltip": [
      {"field": "driver", "type": "nominal", "title": "Driver"},
      {"field": "points", "type": "quantitative", "title": "Total Points"},
      {
        "field": "race_country",
        "type": "nominal",
        "title": "Race"
      }
    ]
  }
}