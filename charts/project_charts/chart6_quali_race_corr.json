{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": {
      "text": "Formula 1 Qualifying Position vs Race Outcome",
      "subtitleFontStyle":"italic",
      "fontSize": 20,
      "subtitleFontSize":12,
      "anchor": "start",
      "color": "black"
    },
  "data": {"url": "https://raw.githubusercontent.com/tahaadamaly/tahaadamaly.github.io/main/data/f1_qualiracecorr.csv"},
  "width": "container",
  "height": 310,

  "mark": "rect",
  "encoding": {
    "x": {
      "bin": {"maxbins": 25},
      "field": "qualipos",
      "type": "quantitative",
      "title": "Qualifying Position",
      "axis": {"format": ""}
    },
    "y": {
      "bin": {"maxbins": 25},
      "field": "racepos",
      "type": "quantitative",
      "title": "Final Race Position"
    },
    "color": {
      "aggregate": "count",
      "type": "quantitative",
      "scale": {"scheme": "turbo"}
    },
           "tooltip": [
            {"field": "qualipos", "type": "quantitative", "title": "Qualifying Position"},
            {"field": "racepos", "type": "quantitative", "title": "Race Position"},
            {"aggregate": "count", "type": "quantitative", "title": "Count"}
        ]
  },

  "config": {
    "view": {
      "stroke": "transparent"
    }
  }
}
