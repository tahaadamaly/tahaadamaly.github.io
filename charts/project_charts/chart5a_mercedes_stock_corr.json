{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": "Mercedes Stock Price and Points Scored",
      "subtitle": "Stock price of Daimler AG, 2012-2020",
      "subtitleFontStyle":"italic",
      "fontSize": 20,
      "subtitleFontSize":12,
      "anchor": "start",
      "color": "black"
    },
    "data": {
      "url": "https://raw.githubusercontent.com/tahaadamaly/tahaadamaly.github.io/main/data/mercedes-points-stockprice.csv",
      "format": {"type": "csv"}
    },
    "height": 310,
    "width": "container",
    "layer": [
      {
        "mark": {
          "type": "point",
          "filled": false
        },
        "encoding": {
          "x": {
            "field": "stock",
            "type": "quantitative",
            "scale": {"domain": [20, 65]},
            "title": "Stock Price"
          },
          "y": {
            "field": "points",
            "type": "quantitative",
            "title": "Points Scored"
          },
          "color": {
            "field": "year",
            "type": "quantitative",
            "legend": null,
            "scale": {"scheme": "category10"}
        },
           "tooltip": [
            {"field": "year", "type": "quantitative", "title": "Year"},
            {"field": "points", "type": "quantitative", "title": "Total Points"},
            {"field": "stock", "type": "quantitative", "title": "Average Stock Price"}
        ]
        }
      },
      {
        "mark": {
          "type": "line",
          "color": "firebrick"
        },
        "transform": [
          {
            "regression": "stock",
            "on": "points"
          }
        ],
        "encoding": {
          "x": {
            "field": "stock",
            "type": "quantitative"
          },
          "y": {
            "field": "points",
            "type": "quantitative"
          }
        }
      },
      {
        "transform": [
          {
            "regression": "stock",
            "on": "points",
            "params": true
          },
          {"calculate": "'RÂ²: '+format(datum.rSquared, '.2f')", "as": "R2"}
        ],
        "mark": {
          "type": "text",
          "color": "firebrick",
          "x": "width",
          "align": "right",
          "y": -5
        },
        "encoding": {
          "text": {"type": "nominal", "field": "R2"}
        }
      }
    ]
  }
  