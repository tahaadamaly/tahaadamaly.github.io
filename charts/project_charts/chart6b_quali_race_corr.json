{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": "Qualifying Position vs Race Outcome",
      "subtitleFontStyle":"italic",
      "fontSize": 20,
      "subtitleFontSize":12,
      "anchor": "start",
      "color": "black"
    },
    "data": {
      "url": "https://raw.githubusercontent.com/tahaadamaly/tahaadamaly.github.io/main/python/F1Project/qualirace.csv",
      "format":{"type": "csv"}
    },
    "width": "container",
    "height": 310,
    "layer": [
      {
        "mark": {
          "type": "point",
          "filled": true,
          "size": 10
        },
        "encoding": {
          "x": {
            "field": "qualipos",
            "type": "quantitative",
            "title": "Qualifying Position"
          },
          "y": {
            "field": "racepos",
            "type": "quantitative",
            "title": "Final Race Position"
          },
            "color": {
              "field": "driverID",
              "type": "nominal",
              "legend": null,
              "scale": {"scheme": "inferno"}
          }
        }
      },
      {
        "mark": {
          "type": "line",
          "color": "seagreen"
        },
        "transform": [
          {
            "loess": "racepos",
            "on": "qualipos"
          }
        ],
        "encoding": {
          "x": {
            "field": "qualipos",
            "type": "quantitative"
          },
          "y": {
            "field": "racepos",
            "type": "quantitative"
          }
        }
      },
      {
        "transform": [
          {
            "regression": "racepos",
            "on": "qualipos",
            "params": true
          },
          {"calculate": "'RÂ²: '+format(datum.rSquared, '.2f')", "as": "R2"}
        ],
        "mark": {
          "type": "text",
          "size": 14,
          "color": "seagreen",
          "x": "width",
          "align": "right",
          "y": -5
        },
        "encoding": {
          "text": {"type": "nominal", "field": "R2"}
        }
      }
    ]
  }
  