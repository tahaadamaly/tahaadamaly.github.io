{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  
  "title": {
    "text": "Red Bull Racing and Mercedes Points",
    "subtitle":"Yearly Totals, 2010-2020",
    "subtitleFontStyle":"italic",
    "subtitleFontSize":10,
    "anchor": "start",
    "color": "black"
  },
  
   "data": {
    "url": "https://raw.githubusercontent.com/tahaadamaly/tahaadamaly.github.io/main/data/redbull_merc_points_history.csv",
    "format": {"type": "csv"}
  },
  
  "height": 300,
  "width": "container",
   
  "mark": {"type": "line", "point": false, "color": "red"},
 
  "encoding": {

    "x": {
      "field": "year",
      "type": "temporal",
      "title": null,
      "axis": {"grid": false}
    },

    "y": {
      "field": "points",
      "type": "quantitative",
      "title": null,
      "axis": {"grid": false}
    },
    "color": {
      "field": "name",
      "type": "nominal",
      "scale": {"scheme": "inferno"},
      "title": "Region",
      "legend": {
        "orient": "bottom-right", 
        "fillColor": "#FcFdFd"}
    }
}
}
